<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/action_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
		<item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="trackColor">@color/action_bar</item>

        <!-- Set navigation bar color -->
        <item name="android:navigationBarColor">@color/navigation_bar</item>

        <!-- Set status bar color -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="WhiteTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@color/light_grey</item>
    </style>
	
	<style name="AppTheme.ReloadButton" parent="AppTheme">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
	
	<style name="AppTheme.PreferenceScreen">
        <item name="colorAccent">@color/preferenceScreenAccent</item>
    </style>

</resources>
