<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="@string/themeSettings">

        <ListPreference
            app:entries="@array/darkTheme"
            app:entryValues="@array/darkThemeValue"
            app:key="@string/key_dark_mode"
            app:title="@string/theme"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/ic_brush" />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/translation_screen_options">

        <SwitchPreference
            app:key="@string/key_switch_lang_button"
            app:title="@string/show_switch_lang_button"
            app:icon="@drawable/ic_switch" />
    </PreferenceCategory>

</PreferenceScreen>
